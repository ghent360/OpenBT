+	.remove 	= occ8001_remove,
+	.driver		= {
+		.name	= "occ8001-codec",
+		.owner	= THIS_MODULE,
+		.of_match_table = of_match_ptr(occ8001_of_match),
+	},
+};
+
+module_platform_driver(occ8001_codec_driver);
+
