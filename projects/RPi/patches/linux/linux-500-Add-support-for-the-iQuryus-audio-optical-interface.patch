+// Definitions for iQurius Optical audio interface
+/dts-v1/;
+/plugin/;
+
+/ {
+	compatible = "brcm,bcm2708";
+
+	fragment@0 {
+		target = <&sound>;
+		__overlay__ {
+			compatible = "iquryus,iqconan";
+			i2s-controller = <&i2s>;
+			status = "okay";
+		};
+	};
+
+	fragment@1 {
+		target = <&i2s>;
+		__overlay__ {
+			status = "okay";
+		};
+	};
+
+	fragment@2 {
+		target-path = "/";
+		__overlay__ {
+			occ8001-codec {
+				#sound-dai-cells = <0>;
+				compatible = "conan,occ8001";
+				status = "okay";
+			};
+		};
+	};
+};
